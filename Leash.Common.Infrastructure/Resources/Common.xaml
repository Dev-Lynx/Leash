<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Leash.Common.Infrastructure.Resources"
                    xmlns:converters="clr-namespace:Leash.Common.Infrastructure.Resources.Converters">
    <ResourceDictionary.MergedDictionaries>
        <!-- TODO: Add Skin Manager -->
        <ResourceDictionary Source="Skins/Dirt/Skin.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!--#region Images-->
    
    <BitmapImage x:Key="HomeBackground" UriSource="Images/Home Background.jpg"/>
    <BitmapImage x:Key="ApplicationLogo" UriSource="Images/Leash.png"/>
    <BitmapImage x:Key="CloseImage" UriSource="Images/Close Button.png"/>
    <BitmapImage x:Key="MinimizeImage" UriSource="Images/Minimize Button.png"/>
    <BitmapImage x:Key="LeftArrow" UriSource="Images/Left Arrow.png"/>
    <BitmapImage x:Key="RightArrow" UriSource="Images/Right Arrow.png"/>

    <!--#endregion-->
    
    <!--#region Converters-->

    <converters:VisibleWhenZeroConverter x:Key="VisibleWhenZeroConverter" />
    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

    <!--#endregion-->
</ResourceDictionary>