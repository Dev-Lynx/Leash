<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Leash.Common.Infrastructure.Resources.Skins.Default"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!--#region Colors-->
    <LinearGradientBrush x:Key="BackgroundBrush">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="{Binding Source={StaticResource FaintAuxBrush}, Path=Color}" Offset="10.0"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="MainBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AuxBrush" Color="#8b4b2e"/>
    <SolidColorBrush x:Key="FaintAuxBrush" Color="#8c5b45"/>
    <SolidColorBrush x:Key="IntenseAuxBrush" Color="#8e2e03"/>
    <!--#endregion-->

    <!--#region Default Font Settings -->
    <FontFamily x:Key="NormalFont">Calibri</FontFamily>
    <sys:Double x:Key="NormalFontSize">16</sys:Double>
    <!--#endregion -->
</ResourceDictionary>