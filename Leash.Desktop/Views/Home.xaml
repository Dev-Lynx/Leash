<UserControl x:Class="Leash.Desktop.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leash.Desktop.Views"
             mc:Ignorable="d" Background="{DynamicResource BackgroundBrush}"
             d:DesignHeight="520" d:DesignWidth="520">
    <UserControl.Resources>
        <ResourceDictionary Source="/Leash.Common.Infrastructure;component/Resources/Common.xaml"/>
    </UserControl.Resources>
    <Grid>
        <TextBlock LineHeight=".1" Margin="30" x:Name="WelcomeBox" TextAlignment="Center" FontSize="80" FontWeight="Bold" Opacity=".7" VerticalAlignment="Center" FontFamily="Calibri">
            Leash
            <LineBreak/>
            <Run FontSize="40" Foreground="{DynamicResource IntenseAuxBrush}">Roping Management</Run>
            <LineBreak/>
            <Run FontSize="40" Foreground="{DynamicResource AuxBrush}">Software</Run>
        </TextBlock>
    </Grid>
</UserControl>
